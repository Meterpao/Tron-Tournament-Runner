<body>
    <div id="hiddenDiv" style="display: none">
        <div id="replayLinkDiv" style="display: none"> {{replayLink}}</div>
        <div id="playerOneDiv" style="display: none"> {{playerOne}}</div>
        <div id="winCountDiv" style="display: none"> {{winCount}}</div>
        <div id="playerTwoDiv" style="display: none"> {{playerTwo}}</div>
        <div id="winnerDiv" style="display: none"> {{winner}}</div>
    </div>

    <div id="container">
        <div id="replayDetails">
        <h1>
            <span class="p1">{{playerOne}}</span>  v. <span class="p2">{{playerTwo}} </span>
        </h1>
        <h2>
            <span class="p1"> {{ winCount }} </span>: <span class="p2">{{ lossCount }}</spanclass="p1">
        </h2>
        </div>
    <div id="replay">
        {{{board}}}
    </div>
        </div>

</body>
