    font-weight: 700;
    color: black;
}

.game + p {
    margin-top: 5px;
}

.game-wrapper {
    margin-bottom: 30px;
    position: relative;
}

.game-wrapper .restart {
    position: absolute;
    top: calc(17 * 20px - 30px);
    left: calc(50% + 9 * 20px);
    width: 30px;
    height: 30px;
    border: none;
    background-color:#b3b3c9;
}

.game-wrapper .restart:hover {
    background-color: white;
}

.wall {
    background-color: #b3b3c9;
}

.barrier {
    background-color: #6b6b7c;
}

.player1 {
    background-color: #BAD650;
}

.player2 {
    background-color: #FFB938;
}

.trap {
    background-color: #b57cd2;
}
